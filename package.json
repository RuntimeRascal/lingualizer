{
    "name": "lingualizer",
    "version": "1.0.0",
    "description": "a localization utility written in javascript",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts":
    {
        "build": "./node_modules/.bin/tsc",
        "prepublish": "npm run build",
        "pretest": "npm run build",
        "cli": "ts-node ./lib/cli.ts --verbose",
        "cli-create-from": "ts-node ./lib/cli.ts create --locale es-MX --based-off \"https://raw.githubusercontent.com/simpert/lingualizer/master/test/data.json\"",
        "cli-set-pos": "ts-node ./lib/cli.ts set keyy valll --verbose --l es-MX",
        "cli-set": "ts-node ./lib/cli.ts set --key keyy --value valll --locale es-MX --verbose",
        "cli-additional": "ts-node ./lib/cli.ts get --help",
        "cli-get-nokey": "ts-node ./lib/cli.ts get",
        "cli-get-nokey2": "ts-node ./lib/cli.ts get --locale es-MX",
        "cli-get": "ts-node ./lib/cli.ts get ok es-MX",
        "cli-get-explicit": "ts-node ./lib/cli.ts get --key close -l es-MX",
        "cli-get-pos": "ts-node ./lib/cli.ts get ok es-MX",
        "pub": "npm version patch && npm publish && git push --follow-tags",
        "test": "./node_modules/.bin/mocha test/**/*.spec.{ts,tsx}"
    },
    "lingualizer":
    {
        "defaultLocale": "en-US",
        "defaultTranslationFileName": "%project%",
        "defaulLocalizationDirName": "localization",
        "defaultTranslationFileExt": "json"
    },
    "bin":
    {
        "lingualizer": "dist/cli.js"
    },
    "author": "tsimper",
    "license": "ISC",
    "repository":
    {
        "type": "git",
        "url": "https://github.com/simpert/lingualizer.git"
    },
    "bugs":
    {
        "url": "https://github.com/simpert/lingualizer/issues"
    },
    "homepage": "https://github.com/simpert/lingualizer#readme",
    "dependencies":
    {
        "@types/fs-extra": "^5.0.4",
        "@types/yargs": "^12.0.5",
        "find-up": "^3.0.0",
        "fs-extra": "^7.0.1",
        "request": "^2.88.0",
        "ste-events": "^1.4.10",
        "yargs": "^12.0.5"
    },
    "devDependencies":
    {
        "@types/chai": "^4.1.7",
        "@types/chalk": "^2.2.0",
        "@types/find-up": "^2.1.1",
        "@types/mocha": "^5.2.5",
        "@types/request": "^2.48.1",
        "chai": "^4.2.0",
        "chalk": "^2.4.2",
        "mocha": "^5.2.0",
        "ts-node": "^7.0.1",
        "typescript": "^3.2.2"
    }
}